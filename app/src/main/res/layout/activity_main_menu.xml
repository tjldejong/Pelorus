<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.pelorusbv.pelorus.ActivityMainMenu">

    <TextView android:text="@string/app_name" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/JoinEventListButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/joinEvent"
        android:layout_marginTop="60dp"
        android:onClick="OnClickJoinEventList"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/CreateEventButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/createEvent"
        android:onClick="OnClickCreateEvent"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Join Boat"
        android:id="@+id/buttonJoinBoat"
        android:layout_below="@+id/JoinEventListButton"
        android:onClick="OnClickJoinBoat"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Boat"
        android:id="@+id/buttonCreateBoat"
        android:layout_below="@+id/CreateEventButton"
        android:onClick="OnClickCreateBoat"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
