<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_blurred"
    tools:context="com.example.pelorusbv.pelorus.ActivityMainMenu">

    <TableRow android:layout_marginBottom="50dp"
        android:layout_marginTop="50dp">

        <TextView android:id="@+id/textViewWelkom" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_span="3"
            android:text="@string/app_name"
            android:textSize="20sp"/>

    </TableRow>
    <TableRow android:layout_marginBottom="10dp"
        android:baselineAligned="false"
        android:weightSum="1">

        <ImageButton
            android:id="@+id/buttonJoinBoat"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="60dp"
            android:background="@drawable/join_boat"
            android:contentDescription="@string/title_activity_activity_join_boat"
            android:onClick="OnClickJoinBoat"
            android:text="Join Boat"
            />

        <ImageButton
            android:id="@+id/button2"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="60dp"
            android:width="0dp"
            android:background="@drawable/spectate"
            android:text="Spectate Event" />
    </TableRow>
    <TableRow android:layout_marginBottom="10dp">
        <Button
            android:id="@+id/JoinEventListButton"
            android:layout_height="100dp"
            android:layout_weight="0.33"
            android:width="0dp"
            android:onClick="OnClickJoinEventList"
            android:text="@string/joinEvent"/>
        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.33"
            android:width="0dp"
            android:text="Manage Boat (captains)"/>

        <Button
            android:id="@+id/buttonCreateBoat"
            android:layout_height="match_parent"
            android:layout_weight="0.33"
            android:width="0dp"
            android:onClick="OnClickCreateBoat"
            android:text="Create Boat (captains)"/>


    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/CreateEventButton"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:width="0dp"
            android:onClick="OnClickCreateEvent"
            android:text="@string/createEvent"/>

    </TableRow>

</TableLayout>
