<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.pelorusbv.pelorus.ActivityJoinEvent"
    android:weightSum="1">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Choose Event:"
        android:id="@+id/textView"
        android:layout_weight="0.1" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/listViewEventList"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.6"
        android:listSelector="@drawable/bg_key"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Choose Boat:"
        android:id="@+id/textView2"
        android:layout_weight="0.1" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/listViewBoatList"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.15"
        android:listSelector="@drawable/bg_key"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Join Event"
        android:id="@+id/JoinEventButton"
        android:onClick="OnClickJoinEvent"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.05" />
</LinearLayout>
